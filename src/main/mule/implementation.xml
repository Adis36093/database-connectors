		<logger level="INFO" doc:name="Before Request" doc:id="59745b80-31d2-4925-9409-971cb93140e0" message="Before deleting rows from database"/>
		<db:delete doc:name="Delete rows" doc:id="49a669c4-a5d4-43c4-a95f-adaf4b25a803" config-ref="Database_Config">
			<db:sql ><![CDATA[DELETE FROM bankdetails WHERE custid = :custid]]></db:sql>
